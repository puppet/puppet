class <%= metadata.name %>::config {

  #### Configuration

  $notify_service = $<%= metadata.name %>::restart_on_change ? {
    true  => Class['<%= metadata.name %>::service'],
    false => undef,
  }

  file { '<%= metadata.name %>_config':
    ensure  => 'present',
    path    => '/etc/<%= metadata.name %>/<%= metadata.name %>.conf',
    mode    => '0644',
    owner   => 'root',
    group   => 'root',
    content => template('<%= metadata.name %>/config.erb'),
    notify  => $notify_service,
  }

}
