# * Your name <mailto:you@email.com>
#
class <%= metadata.name %>::package {

  #### Package management

  # set params: in operation
  if $<%= metadata.name %>::ensure == 'present' {

    # Check if we want to install a specific version or not
    if $<%= metadata.name %>::version == false {

      $package_ensure = $<%= metadata.name %>::autoupgrade ? {
        true  => 'latest',
        false => 'present',
      }

    } else {

      # install specific version
      $package_ensure = $<%= metadata.name %>::version

    }

  # set params: removal
  } else {
    $package_ensure = 'purged'
  }

  # action
  package { $<%= metadata.name %>::params::package:
    ensure => $package_ensure,
  }

}
